@import "colorui/main.wxss";
@import "colorui/icon.wxss";

.page {
  font-size: 24rpx;
  min-height: 100vh;
  box-sizing: border-box;
  line-height: 1;
}

button::after {
  border: 0;
}

.nomore, .nodata {
  padding: 30rpx 0;
  text-align: center;
  color: #bbb;
  font-size: 24rpx;
}

.nomore.tabbar, .nodata.tabbar {
  padding-bottom: 140rpx;
}

.tabbar-page {
  padding-bottom: 140rpx;
}

.full-loading {
  position: fixed;
  left: 0;
  top: 0;
  width: 100vw;
  height: 100vh;
  background: #fff;
  z-index: 1500;
  overflow: hidden;
}

.full-loading .image {
  width: 250rpx;
  height: 250rpx;
  position: absolute;
  margin: auto;
  left: 0;
  right: 0;
  top: calc(50% - 220rpx);
  background-image: url("data:image/svg+xml;base64,");
  background-size: cover;
}

.navigator-hover {
  pointer-events: none; /* 点击事件直接穿透到下层元素，即跳过这个链接或者按钮 */
  opacity: 0.8;
}

.navigator-hover {
  background: initial;
  opacity: initial;
}

.flex {
  display: flex;
}

.vh {
  visibility: hidden;
}

.text-plat-ios {
  padding: 0rpx 5rpx;
}

.text-plat {
  padding: 15rpx;
}

/* 富文本 start */
.content-wrapper view {
  overflow: auto;
}

.content-wrapper image {
  max-width: 100%;
  vertical-align: bottom;
}
/* 富文本 end */

/* 超出省略 start */
.one-line-ellipsis {
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: nowrap;
}

.two-line-ellipsis {
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
/* 超出省略 end */

/* 隐藏scroll-view滚动条 start */
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
/* 隐藏scroll-view滚动条 end */

/* 筛选框 start */
.filter-box {
  position: fixed;
  width: 100%;
  top: 0;
  z-index: 1;
  background: #fcfafa;
  padding-bottom: 24rpx;
}
/* 筛选框 end */

/* filter下的搜索框 start */
.filter-box .search-box {
  padding: 14rpx 24rpx;
  background: #4583fb;
}

.filter-box .search-box .search {
  height: 60rpx;
  border-radius: 30rpx;
  background-color: #3e75e1;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 20rpx 0 35rpx;
}

.filter-box .search-box .search input {
  color: #fff;
  font-size: 26rpx;
  flex-grow: 1;
}

.filter-box .search-box .search input .input-placeholder {
  color: #fcfafa;
  opacity: 0.4;
}

.filter-box .search-box .search .del {
  width: 40rpx;
  height: 40rpx;
  margin-left: 20rpx;
  opacity: 0.7;
}
/* filter下的搜索框 end */

/* 商品列表 start */
.product-box {
  margin-top: 40rpx;
  background: #fff;
  box-shadow: 0 1rpx 76rpx 0 rgba(241, 238, 238, 0.75);
  border-radius: 4rpx;
}

.product-box .np-list {
  margin-top: 40rpx;
  padding: 0 24rpx;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}

.product-box .np-list .np {
  width: 317rpx;
  margin-bottom: 39rpx;
}

.product-box .np-list .np:nth-last-child(-n + 2) {
  margin-bottom: 0;
}

.product-box .np-list .np .cover {
  width: 100%;
  height: 317rpx;
}

.product-box .np-list .np .info {
  margin-top: 8.5rpx;
}

.product-box .np-list .np .info .title {
  line-height: 39rpx;
  font-size: 26rpx;
  color: #3d3737;
}

.product-box .np-list .np .info .xia {
  margin-top: 17.5rpx;
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}

.product-box .np-list .np .info .xia .price::before {
  content: '￥';
  color: #000;
  opacity: 0.6;
  font-size: 28rpx;
  margin-right: 2rpx;
}

.product-box .np-list .np .info .xia .price {
  font-size: 34rpx;
  color: #ff3f3f;
}

.product-box .np-list .np .info .xia .rest {
  font-size: 24rpx;
  color: #3d3737;
  opacity: 0.4;
}
/* 商品列表 end */

/* 打开授权菜单 start */
.setting-box {
  padding: 10rpx;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 100;
  height: 100vh;
  box-sizing: border-box;
  background: rgba(0, 0, 0, 0.7);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  overflow: hidden;
}

.setting-box .os-box {
  display: flex;
  align-items: center;
  justify-content: center;
  background: #fff;
  flex-direction: column;
  padding: 47rpx 30rpx;
}

.setting-box .os-box > view {
  text-align: center;
  margin-bottom: 20rpx;
  font-size: 26rpx;
}

.setting-box .set_btn {
  width: 70%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  padding: 0;
  background: #8e97b4;
  color: #fff;
  margin-top: 20rpx;
  border-radius: 0;
  height: 60rpx;
  line-height: 60rpx;
  min-height: auto;
  font-weight: normal;
}

.setting-box .set_btn:active {
  opacity: 0.8;
}
/* 打开授权菜单 end */