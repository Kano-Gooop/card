<view class="page">
  <view class="filter-box">
    <!-- 搜索框 -->
    <view class="search-box">
      <view class="search">
        <input bindinput="bind_input" bindconfirm="search_card" data-name="search" value="{{search}}" placeholder="请输入卡牌名称或技能" maxlength="20"/>
        <image bindtap="clear_search" src="/icons/delete.png" class="del" wx:if="{{search}}"></image>
      </view>
    </view>

    <scroll-view scroll-x class="scroll-tab">
      <view class="tab-item {{active_tab == -1 ? 'active' : ''}}" bindtap="all_goods" data-index="{{index}}">
        全部
      </view>
      <view class="tab-item {{active_tab == index ? 'active' : ''}}" bindtap="tab_change" data-index="{{index}}" wx:for="{{cate_list}}" wx:key="id">
        {{item.cate_name}}
      </view>
    </scroll-view>
  </view>

  <!-- 商品列表 -->
  <view class="product-box">
    <view class="np-list">
      <view class="np" wx:for="{{[0, 1, 2]}}">
        <image src="/images/t-goods.png" class="cover"></image>
        <view class="info">
          <view class="title two-line-ellipsis">掌控的历史 初阵【081】征西将军 陈到 普卡 蜀银</view>
          <view class="xia">
            <view class="price">50.00</view>
            <view class="rest">剩余561件</view>
          </view>
        </view>
      </view>
      <view class="np vh"></view>
    </view>

    <view class="nomore" wx:if="{{nomore}}">
      已经没有更多了哦
    </view>
    <view class="nodata" wx:if="{{nodata}}">
      暂无数据
    </view>
  </view>
</view>