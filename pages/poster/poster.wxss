.page {
  background: #fcfafa;
  padding-top: 24rpx;
}

.poster {
  padding: 50rpx 0;
  background: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 0 24rpx;
  box-shadow: 0 1rpx 76rpx 0 rgba(241, 238, 238, 0.75);
}

.poster .cover {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  border: 3rpx solid #2586ff;
}

.poster .create-poster {
  padding: 0 50rpx;
  margin: 30rpx 0 0;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 26rpx;
  color: #fff;
  background: #2586ff;
  min-height: auto;
}

.invite-box {
  margin: 50rpx 24rpx 0;
  padding: 24rpx;
  background: #fff;
  box-shadow: 0 1rpx 76rpx 0 rgba(241, 238, 238, 0.75);
}

.invite-box .title {
  font-size: 30rpx;
  color: #4583fb;
  display: flex;
  align-items: center;
}

.invite-box .title::before {
  content: '';
  width: 6rpx;
  height: 40rpx;
  opacity: 0.8;
  background: #2586ff;
  margin-right: 8rpx;
}

.invite-list {
  margin-top: 30rpx;
}

.invite-list .invite:first-child {
  margin-top: 0;
}

.invite-list .invite.hd {
  color: #4583fb;
  font-size: 28rpx;
  border-top: 2rpx solid #ddd;
  padding-top: 20rpx;
}

.invite-list .invite.hd .header {
  height: auto;
}

.invite-list .invite {
  margin-top: 24rpx;
  display: flex;
  align-items: center;
  border-bottom: 2rpx solid #ddd;
  padding-bottom: 20rpx;
}

.invite-list .invite > view:first-child {
  margin-left: 0;
}

.invite-list .invite > view {
  margin-left: 20rpx;
}

.invite-list .invite > .hd-box {
  width: 100rpx;
}

.invite-list .invite > .hd-box .header {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
}

.invite-list .invite > .nickname {
  width: 120rpx;
}

.invite-list .invite > .date {
  width: 160rpx;
}

.invite-list .invite > .price {
  width: 120rpx;
}

.invite-list .invite > .detail {
  flex-grow: 1;
}

.invite-list .invite > .detail button {
  padding: 0 10rpx;
  margin: 0;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 24rpx;
  color: #fff;
  background: #2586ff;
  min-height: auto;
}

.modal-wrapper {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 10;
  height: 100vh;
  box-sizing: border-box;
  background: rgba(0, 0, 0, 0.7);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  overflow: hidden;
}

.modal {
  position: absolute;
  left: 60rpx;
  right: 60rpx;
  top: 60rpx;
  bottom: 60rpx;
  background: #fff;
}

.modal .close {
  padding: 10rpx;
  position: absolute;
  right: -23rpx;
  top: -23rpx;
}

.modal .close image {
  width: 40rpx;
  height: 40rpx;
  border: 5rpx solid #fff;
  border-radius: 50%;
}

.iinvite-list {
  display: none;
}

