<view class="page">
  <!-- 整个筛选框 -->
  <view class="filter-box">
    <!-- 搜索框 -->
    <view class="search-box">
      <view class="search">
        <input bindinput="bind_input" bindconfirm="search_card" data-name="search" value="{{search}}" placeholder="请输入卡牌名称或技能" maxlength="20"/>
        <image bindtap="clear_search" src="/icons/delete.png" class="del" wx:if="{{search}}"></image>
      </view>
    </view>

    <!-- 属性 -->
    <view class="prop-box">
      <view class="title">属性</view>
      <view class="p-list">
        <view class="prop all active">全部</view>
        <view class="prop">金</view>
        <view class="prop">木</view>
        <view class="prop">水</view>
        <view class="prop">火</view>
        <view class="prop">土</view>
        <view class="prop">无</view>
      </view>
    </view>

    <!-- 类别/阵营/能力/版本 -->
    <view class="prop-line">
      <view bindtap="pt_change" data-prop_type="{{1}}" class="prop {{prop_type == 1 ? 'active' : ''}}">资源值</view>
      <view bindtap="pt_change" data-prop_type="{{2}}" class="prop {{prop_type == 2 ? 'active' : ''}}">类别</view>
      <view bindtap="pt_change" data-prop_type="{{3}}" class="prop {{prop_type == 3 ? 'active' : ''}}">阵营</view>
      <view bindtap="pt_change" data-prop_type="{{4}}" class="prop {{prop_type == 4 ? 'active' : ''}}">能力</view>
      <view bindtap="pt_change" data-prop_type="{{5}}" class="prop {{prop_type == 5 ? 'active' : ''}}">版本</view>

      <!-- 资源值弹框 -->
      <view class="pop-list num" wx:if="{{prop_type == 1}}">
        <view class="prop all active">全部</view>
        <view class="option-box">
          <view class="prop">0</view>
          <view class="prop">1</view>
          <view class="prop">2</view>
          <view class="prop">3</view>
          <view class="prop">4</view>
          <view class="prop">5</view>
          <view class="prop">6</view>
          <view class="prop not">7+</view>
          <view class="prop">X</view>
        </view>
      </view>

      <!-- 类别弹框 -->
      <view class="pop-list" wx:if="{{prop_type == 2}}">
        <view class="prop all active">全部</view>
        <view class="option-box">
          <view class="prop">单位</view>
          <view class="prop">资源</view>
          <view class="prop">军阵</view>
          <view class="prop">战器</view>
          <view class="prop">策略</view>
        </view>
      </view>

      <!-- 阵营弹框 -->
      <view class="pop-list" wx:if="{{prop_type == 3}}">
        <view class="prop all active">全部</view>
        <view class="option-box">
          <view class="prop">商</view>
          <view class="prop">周</view>
          <view class="prop">无</view>
        </view>
      </view>

      <!-- 能力弹框 -->
      <view class="pop-list" wx:if="{{prop_type == 4}}">
        <view class="prop all active">全部</view>
        <view class="option-box">
          <view class="prop">破竹</view>
          <view class="prop">冲锋</view>
          <view class="prop">护卫</view>
          <view class="prop">瞬发</view>
          <view class="prop">远程</view>
          <view class="prop">致命</view>
          <view class="prop">佩戴</view>
          <view class="prop">登场</view>
          <view class="prop">阵亡</view>
          <view class="prop">无</view>
        </view>
      </view>

      <!-- 版本弹框 -->
      <view class="pop-list" wx:if="{{prop_type == 5}}">
        <view class="prop all active">全部</view>
        <view class="option-box">
          <view class="prop">帝国崛起第一章 武王伐纣</view>
        </view>
      </view>
    </view>
  </view>

  <!-- 选择属性遮罩 -->
  <view bindtap="hide_pt" class="modal" wx:if="{{prop_type != 0}}"></view>

  <!-- 卡牌列表 -->
  <view class="card-box">
    <view class="card-list">
      <navigator wx:for="{{[0, 1, 2, 3, 4, 5, 6]}}" class="card">
        <image src="/images/t-card.png"></image>
      </navigator>
      <view class="card vh"></view>
      <view class="card vh"></view>
    </view>
    <view class="nomore" wx:if="{{nomore}}">
      已经没有更多了哦
    </view>
    <view class="nodata" wx:if="{{nodata}}">
      暂无数据
    </view>
  </view>
</view>