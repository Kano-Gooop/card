.page {
  background: #fcfafa;
  padding-top: 382rpx;
}

.filter-box .prop-box {
  padding: 0 24rpx;
  margin-top: 40rpx;
}

.filter-box .prop-box .title {
  font-size: 32rpx;
  color: #000;
  opacity: 0.8;
  letter-spacing: 1rpx;
}

.filter-box .prop-box .p-list {
  margin-top: 24rpx;
  display: flex;
  flex-wrap: wrap;
}

.filter-box .prop-box .p-list .prop:first-child {
  margin-left: 0;
}

.filter-box .prop-box .p-list .prop {
  width: 50rpx;
  height: 50rpx;
  border-radius: 25rpx;
  box-sizing: border-box;
  border: 2rpx solid #4583fb;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  letter-spacing: 1rpx;
  color: #4583fb;
  margin-left: 24rpx;
}

.filter-box .prop-box .p-list .prop.active {
  background: #4583fb;
  color: #fff;
}

.filter-box .prop-box .p-list .prop.all {
  width: 80rpx;
}

.filter-box .prop-line {
  margin-top: 40rpx;
  display: flex;
  background: #fff;
  position: relative;
}

.filter-box .prop-line > .prop {
  width: 0;
}

.filter-box .prop-line .prop {
  flex-grow: 1;
  text-align: center;
  line-height: 84rpx;
  font-size: 32rpx;
  color: #4583fb;
  letter-spacing: 1rpx;
  position: relative;
}

.filter-box .prop-line .prop::after {
  content: '';
  height: 60rpx;
  width: 2rpx;
  background: rgba(37, 134, 206, 0.07);
  right: -1rpx;
  top: 0;
  bottom: 0;
  margin: auto;
  position: absolute;
}

.filter-box .prop-line .prop:nth-child(4)::after {
  display: none;
}

.filter-box .prop-line .prop.active {
  background: rgba(37, 134, 206, 0.07);
}

.filter-box .prop-line .pop-list {
  position: absolute;
  top: 100%;
  background: #eff6fe;
  display: flex;
  box-sizing: border-box;
  padding: 40rpx 24rpx 16rpx;
  width: 100%;
}

.filter-box .prop-line .pop-list.num .prop {
  width: 50rpx;
  padding: 0;
}

.filter-box .prop-line .pop-list.num .prop.all, .filter-box .prop-line .pop-list.num .prop.not {
  width: auto;
  padding: 0 18rpx;
}

.filter-box .prop-line .pop-list .prop.all {
  flex-shrink: 0;
}

.filter-box .prop-line .pop-list .prop {
  height: 50rpx;
  line-height: 48rpx;
  box-sizing: border-box;
  padding: 0 18rpx;
  border: 2rpx solid #4583fb;
  color: #4583fb;
  border-radius: 25rpx;
  font-size: 26rpx;
  margin-right: 24rpx;
  letter-spacing: 1rpx;
  text-align: center;
  flex-grow: 0;
  margin-bottom: 24rpx;
}

.filter-box .prop-line .pop-list .option-box {
  display: flex;
  flex-wrap: wrap;
  flex-grow: 1;
}

.filter-box .prop-line .pop-list .prop::after {
  display: none;
}

.filter-box .prop-line .pop-list .prop:last-child {
  margin-right: 0;
}

.filter-box .prop-line .pop-list .prop.active {
  background: #4583fb;
  color: #fff;
}

.modal {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  top: 0;
  background: rgba(0, 0, 0, 0.5);
}

.card-box {
}

.card-box .card-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 0 24rpx;
}

.card-box .card-list .card {
  width: 224rpx;
  height: 297rpx;
  margin-bottom: 24rpx;
}

.card-box .card-list .card:nth-last-child(-n + 3) {
  margin-bottom: 0;
}

.card-box .card-list .card image {
  width: 100%;
  height: 100%;
  vertical-align: bottom;
}