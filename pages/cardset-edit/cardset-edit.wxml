<view class="page">
  <!-- 主屏幕 -->
  <view class="DrawerPage {{show_side ? 'show' : ''}}">
    <!-- 筛选框 -->
    <view class="filter-box2">
      <!-- 搜索框 -->
      <view class="search-box">
        <view class="drawer-box">
          <image bindtap="showModal" src="/icons/drawer.png" class="drawer"></image>
          <view class="num" id="dot-num">12</view>
          <view class="dot {{dot_active ? 'active' : ''}}" style="left: {{dot_left}}px; top: {{dot_top}}px;"></view>
        </view>
        <view class="search">
          <input bindinput="bind_input" bindconfirm="search_card" data-name="search" value="{{search}}"
                 placeholder="请输入卡牌名称或技能" maxlength="20"/>
          <image bindtap="clear_search" src="/icons/delete.png" class="del" wx:if="{{search}}"></image>
        </view>
      </view>

      <!-- 属性/费用/类别/势力/能力/版本 -->
      <view class="prop-line">
        <view bindtap="pt_change" data-prop_type="{{1}}" class="prop one-line-ellipsis {{prop_type == 1 ? 'active' : ''}}">属性</view>
        <view class="shu"></view>
        <view bindtap="pt_change" data-prop_type="{{2}}" class="prop one-line-ellipsis {{prop_type == 2 ? 'active' : ''}}">费用</view>
        <view class="shu"></view>
        <view bindtap="pt_change" data-prop_type="{{3}}" class="prop one-line-ellipsis {{prop_type == 3 ? 'active' : ''}}">类别</view>
        <view class="shu"></view>
        <view bindtap="pt_change" data-prop_type="{{4}}" class="prop one-line-ellipsis {{prop_type == 4 ? 'active' : ''}}">势力</view>
        <view class="shu"></view>
        <view bindtap="pt_change" data-prop_type="{{5}}" class="prop one-line-ellipsis {{prop_type == 5 ? 'active' : ''}}">能力</view>
        <view class="shu"></view>
        <view bindtap="pt_change" data-prop_type="{{6}}" class="prop one-line-ellipsis {{prop_type == 6 ? 'active' : ''}}">版本</view>

        <!-- 属性弹框 -->
        <view class="pop-list" wx:if="{{prop_type == 1}}">
          <view class="prop">全部</view>
          <view class="prop active">金<image src="/icons/cornermark.png" class="cornermark"></image></view>
          <view class="prop">木</view>
          <view class="prop">水</view>
          <view class="prop">火</view>
          <view class="prop">土</view>
          <view class="prop">无</view>
          <view class="prop vh"></view>
        </view>

        <!-- 费用弹框 -->
        <view class="pop-list" wx:if="{{prop_type == 2}}">
          <view class="prop active">全部</view>
          <view class="prop">0</view>
          <view class="prop">1</view>
          <view class="prop">2</view>
          <view class="prop">3</view>
          <view class="prop">4</view>
          <view class="prop">5</view>
          <view class="prop">6</view>
          <view class="prop">7+</view>
          <view class="prop">X</view>
          <view class="prop vh"></view>
          <view class="prop vh"></view>
        </view>

        <!-- 类别弹框 -->
        <view class="pop-list" wx:if="{{prop_type == 3}}">
          <view class="prop active">全部</view>
          <view class="prop">单位</view>
          <view class="prop">资源</view>
          <view class="prop">军阵</view>
          <view class="prop">战器</view>
          <view class="prop">策略</view>
          <view class="prop vh"></view>
          <view class="prop vh"></view>
        </view>

        <!-- 势力弹框 -->
        <view class="pop-list" wx:if="{{prop_type == 4}}">
          <view class="prop active">全部</view>
          <view class="prop">商</view>
          <view class="prop">周</view>
          <view class="prop">无</view>
        </view>

        <!-- 能力弹框 -->
        <view class="pop-list" wx:if="{{prop_type == 5}}">
          <view class="prop active">全部</view>
          <view class="prop">破竹</view>
          <view class="prop">冲锋</view>
          <view class="prop">护卫</view>
          <view class="prop">瞬发</view>
          <view class="prop">远程</view>
          <view class="prop">致命</view>
          <view class="prop">佩戴</view>
          <view class="prop">登场</view>
          <view class="prop">阵亡</view>
          <view class="prop">无</view>
          <view class="prop vh"></view>
        </view>

        <!-- 版本弹框 -->
        <view class="pop-list line" wx:if="{{prop_type == 6}}">
          <view class="prop active">全部</view>
          <view class="prop">帝国崛起第一章 武王伐纣</view>
        </view>
      </view>
    </view>

    <!-- 选择属性遮罩 -->
    <view bindtap="hide_pt" class="modal" wx:if="{{prop_type != 0}}"></view>

    <view class="card-box">
      <scroll-view bindscrolltolower="more_card" scroll-y class="card-list-wrapper" style="height: {{cl_height}}px;">
        <view class="card-list">
          <navigator url="/pages/card-detail/card-detail" wx:for="{{temp_arr}}" class="card">
            <view class="btn-group">
              <button catchtap="get_position" data-index="{{index}}" data-type="{{1}}" id="card_zhu_{{index}}" class="zhu active">主</button>
              <button catchtap="get_position" data-index="{{index}}" data-type="{{2}}" id="card_bei_{{index}}" class="bei active">备</button>
            </view>
            <image src="/images/t-card.png"></image>
          </navigator>
          <view class="card vh"></view>
          <view class="card vh"></view>
        </view>

        <view class="friendly-nodata" wx:if="{{nodata}}">
          <image src="/images/nodata-search.png" class="img"></image>
          <view class="title">无结果</view>
        </view>
      </scroll-view>
    </view>
  </view>

  <!-- 返回主屏幕 -->
  <view class="DrawerClose {{show_side ? 'show' : ''}}" bindtap="hideModal">
    <text class="cuIcon-pullright"></text>
  </view>

  <!-- 侧栏 -->
  <view scroll-y class="DrawerWindow {{show_side ? 'show' : ''}}">
    <view class="top-box">
      <view class="explain">
        <image src="/images/explain-bg.jpg" class="bg"></image>
        <view class="text">
          <view>主牌与备牌区分别收集了您选中的卡牌</view>
          <view>快来看看吧~</view>
        </view>
      </view>
      <view class="tab-list">
        <view class="tab active">主牌区</view>
        <view class="tab">备牌区</view>
      </view>
    </view>
    <view class="card-list-wrapper" id="card-list2-wrapper">
      <scroll-view scroll-y class="card-list2" style="height: {{cl2_height}}px;">
        <view class="card" wx:for="{{[0, 1, 2, 3, 4, 5, 6]}}">
          <view class="cost">2</view>
          <view class="name one-line-ellipsis">善走御者 蜚廉</view>
          <view class="add-sub">
            <image src="/icons/minus.png" class="sub"></image>
            <view class="num">14</view>
            <image src="/icons/add.png" class="add"></image>
          </view>
        </view>
      </scroll-view>
    </view>
    <view class="bottom-box">
      <button class="edit-btn">创建套牌</button>
    </view>
  </view>
</view>